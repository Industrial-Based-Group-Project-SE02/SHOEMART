<Window x:Class="ShoeRetailPOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ShoeRetailPOS"
        Title="Shoe Retail POS"
        WindowState="Maximized"
        Background="#121212">

    <Window.Resources>
        <!-- Color Palette -->
        <Color x:Key="PrimaryRedColor">#E53935</Color>
        <Color x:Key="DarkRedColor">#C62828</Color>
        <Color x:Key="LightRedColor">#FFEBEE</Color>
        <Color x:Key="DarkBlackColor">#121212</Color>
        <Color x:Key="LightBlackColor">#212121</Color>
        <Color x:Key="SoftBlackColor">#424242</Color>
        <Color x:Key="LightGrayColor">#F5F5F5</Color>
        <Color x:Key="BorderGrayColor">#E0E0E0</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="PrimaryRed" Color="{StaticResource PrimaryRedColor}"/>
        <SolidColorBrush x:Key="DarkRed" Color="{StaticResource DarkRedColor}"/>
        <SolidColorBrush x:Key="LightRed" Color="{StaticResource LightRedColor}"/>
        <SolidColorBrush x:Key="DarkBlack" Color="{StaticResource DarkBlackColor}"/>
        <SolidColorBrush x:Key="LightBlack" Color="{StaticResource LightBlackColor}"/>
        <SolidColorBrush x:Key="SoftBlack" Color="{StaticResource SoftBlackColor}"/>
        <SolidColorBrush x:Key="LightGray" Color="{StaticResource LightGrayColor}"/>
        <SolidColorBrush x:Key="BorderGray" Color="{StaticResource BorderGrayColor}"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#252525"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Navigation Button Style -->
        <Style x:Key="ActiveNavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryRed}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Background="#181818" Padding="20,15">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="2" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource PrimaryRed}" 
                            CornerRadius="8" 
                            Width="40" Height="40"
                            Margin="0,0,15,0">
                        <TextBlock Text="&#xE7C4;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   Foreground="White" 
                                   FontSize="20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ShoeMart POS" 
                                   Foreground="White" 
                                   FontSize="22" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="Premium Footwear Retail System" 
                                   Foreground="#AAAAAA" 
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation Menu - Centered -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="DashboardButton"
                            Style="{StaticResource ActiveNavButtonStyle}"
                            Click="Dashboard_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE80F;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Dashboard"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="HoldsButton"
                            Style="{StaticResource NavButtonStyle}"
                            Click="Holds_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8B9;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Holds"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="SettingsButton"
                            Style="{StaticResource NavButtonStyle}"
                            Click="Settings_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE713;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Settings"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Empty spacer to balance the layout -->
                <Grid Grid.Column="2" Width="300" />
            </Grid>
        </Border>

        <!-- Content area -->
        <ContentControl x:Name="MainContent" Grid.Row="1"/>
    </Grid>
</Window>